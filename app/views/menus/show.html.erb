<div class="show">

  <div class="container">
  <div class="row">
  <!--  left side -->
  <div class="col-xs-12 col-sm-8">

        <div class="menu-card">

          <div class="photo large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path @menu.photo.path, width: 1000, height: 500, crop: :fill  %>');">
          </div>

          <%= link_to chef_path(@menu.user.id), class: 'link-chef-large' do %><%= @menu.user.photo ? cl_image_tag(@menu.user.photo.path, width: 300, height: 200, crop: :crop, class: 'avatar') : image_tag("no_photo.png", width: 300, height: 200, crop: :crop, class: 'avatar') %><% end %>

          <div class="description">
            <h3><%= @menu.name %></h3>
            <div><%= @menu.description %></div>
            <div><%= @menu.availability %></div>
            <div><%= @menu.price %>â‚¬</div>
          </div>

          <div class="localisation">
            <p><i class="fa fa-map-marker"></i> <%= @menu.user.address %></p>
          </div>

        </div>

        <div class="menu-card">

          <div class="description">
            <ul>
              <li>Starter:<%= @menu.starter %></li>
              <li>Meal:<%= @menu.meal %></li>
              <li>Dessert:<%= @menu.dessert %></li>
            </ul>
          </div>

        </div>

        <div class="menu-card chef">

          <div class="chef-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @menu.user.photo ? cl_image_path(@menu.user.photo.path, width: 1000, height: 400, gravity: :face, crop: :crop) : image_path("no_photo.png", width: 1000, height: 400) %>');">
          <p>The chef:</p>
          <h3><%= @menu.user.first_name %> <%= @menu.user.last_name %></h3>
          </div>

        </div>


  </div>
  <!--  right side -->
  <div class="col-xs-12 col-sm-4">
    <div class="action-card">
      <p>Portions available: <%= @menu.portions %></p>
      <%= link_to "Order now", @menu, class: 'btn cta-btn' %>
    </div>
  </div>
  </div>
  </div>

<div>
<!-- for the chef only -->
for the chef only:
<%= link_to edit_menu_path(@menu) do %> <i class="fa fa-edit"></i> Edit menu <% end %>
</div>
</div>

