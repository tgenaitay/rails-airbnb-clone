<div class="container">
    <div class="row">
      <div class="forms col-sm-6 col-sm-offset-3 col-lg-6 col-lg-offset-3">
        <div class="section">
          <h2 class="text-center small">Publish a menu</h2>
        </div>

        <%= simple_form_for(@menu) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :starter %>
            <%= f.input :meal %>
            <%= f.input :dessert %>
            <%= f.input :price %>
            <%= f.input :portions %>
            <%= f.input :availability %>
            <%= f.input :category , priority: [ "dinner" ], collection: [ "lunch", "dinner"] %>
            <%= f.input :photo, as: :attachinary %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class: 'btn cta-btn btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
</div>


