<%= simple_form_for(@menu) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :starter %>
    <%= f.input :meal %>
    <%= f.input :dessert %>
    <%= f.input :price %>
    <%= f.input :portions %>
    <%= f.input :availability %>
    <%= f.input :category , priority: [ "dinner" ], collection: [ "lunch", "dinner"] %>
    <%= f.input :photo, as: :attachinary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

