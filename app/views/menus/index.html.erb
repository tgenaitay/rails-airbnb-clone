        <div class="description">
          <h3><%= menu.name %></h3>
          <p>Lorem ipsum dolor sit amet.</p>
          <span><%= menu.price %>â‚¬</span>
        </div>
        <div class="localisation">
          <p><i class="fa fa-map-marker"></i> City</p>
          <%= link_to "Order now", menu, class: 'btn cta-btn' %>
        </div>
      </div>

    </div>
  <% end %>
  </div>
</div>




